  <meta charset="UTF-8">
  <title>Property Info - SmartPropertyValuation</title>
  <style>
    body { font-family: Arial; background: #f5f5f5; }
    .container { max-width: 450px; margin: 40px auto; background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);}
    label { display: block; margin: 15px 0 5px; font-weight: bold; }
    input, select { width: 100%; padding: 10px; border: 1px solid #bbb; border-radius: 5px; }
    button { margin-top: 20px; padding: 12px 30px; background: #007BFF; color: #fff; border: none; border-radius: 6px; font-size: 18px; cursor: pointer; }
    button:disabled { background: #aaa; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Enter Your Property Information</h2>
    <form id="propertyForm">
      <label for="address">Address</label>
      <input type="text" id="address" required placeholder="123 Main St, City, State">
      <label for="zipcode">Zip Code</label>
      <input type="text" id="zipcode" required placeholder="90210">
      <label for="bedrooms">Bedrooms</label>
      <input type="number" id="bedrooms" min="1" max="10" required>
      <label for="bathrooms">Bathrooms</label>
      <input type="number" id="bathrooms" min="1" max="10" required>
      <label for="sqft">Square Footage</label>
      <input type="number" id="sqft" min="100" max="10000" required>
      <label for="preferences">Preferences</label>
      <select id="preferences">
        <option value="">--Select--</option>
        <option value="sell">Looking to Sell</option>
        <option value="buy">Looking to Buy</option>
        <option value="refinance">Refinance</option>
      </select>
      <button type="submit">Search</button>
    </form>
  </div>
  <script>
    document.getElementById('propertyForm').addEventListener('submit', function(e) {
      e.preventDefault();
      // Gather form data
      const data = {
        address: document.getElementById('address').value,
        zipcode: document.getElementById('zipcode').value,
        bedrooms: document.getElementById('bedrooms').value,
        bathrooms: document.getElementById('bathrooms').value,
        sqft: document.getElementById('sqft').value,
        preferences: document.getElementById('preferences').value
      };
      // Store data in localStorage for retrieval on results.html
      localStorage.setItem('propertyData', JSON.stringify(data));
      // Go to results page
      window.location.href = 'results.html';
    });
  </script>
</body>
</html>
