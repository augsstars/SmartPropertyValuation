  <style>
    body { font-family: Arial; background: #f5f5f5; }
    .container { max-width: 450px; margin: 40px auto; background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);}
    label { display: block; margin: 15px 0 5px; font-weight: bold; }
    input, select { width: 100%; padding: 10px; border: 1px solid #bbb; border-radius: 5px; }
    button { margin-top: 20px; padding: 12px 30px; background: #007BFF; color: #fff; border: none; border-radius: 6px; font-size: 18px; cursor: pointer; }
    button:disabled { background: #aaa; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Tell Us About Your Ideal Home</h2>
    <form id="buyerForm">
      <label for="location">Preferred Location or Area</label>
      <input type="text" id="location" required placeholder="e.g., Downtown, Suburbs, Zip Code">

      <label for="budget">Your Budget ($)</label>
      <input type="number" id="budget" required placeholder="e.g., 500000">

      <label for="bedrooms">Minimum Bedrooms</label>
      <input type="number" id="bedrooms" min="1" max="10" required>

      <label for="bathrooms">Minimum Bathrooms</label>
      <input type="number" id="bathrooms" min="1" max="10" required>

      <label for="type">Property Type</label>
      <select id="type" required>
        <option value="">--Select--</option>
        <option value="house">House</option>
        <option value="condo">Condo</option>
        <option value="apartment">Apartment</option>
        <option value="townhouse">Townhouse</option>
        <option value="other">Other</option>
      </select>

      <label for="features">Must-Have Features (optional)</label>
      <input type="text" id="features" placeholder="e.g., Garage, Pool, Large Yard">

      <button type="submit">Search Homes</button>
    </form>
  </div>
  <script>
    document.getElementById('buyerForm').addEventListener('submit', function(e) {
      e.preventDefault();
      // Gather form data
      const data = {
        location: document.getElementById('location').value,
        budget: document.getElementById('budget').value,
        bedrooms: document.getElementById('bedrooms').value,
        bathrooms: document.getElementById('bathrooms').value,
        type: document.getElementById('type').value,
        features: document.getElementById('features').value
      };
      // Store data in localStorage for retrieval on results.html
      localStorage.setItem('buyerData', JSON.stringify(data));
      // Go to results page
      window.location.href = 'results.html';
    });
  </script>
</body>
